<Window x:Class="imgcompressor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于 imgcompressor" Height="360" Width="480" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="16" FontWeight="Bold" Text="imgcompressor" />

        <ScrollViewer Grid.Row="1" Margin="0,10,0,10" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="作者: Sakura1618" Margin="0,0,0,6" />
                <TextBlock Text="版本: 1.0" Margin="0,0,0,6" />
                <TextBlock Text="用途: 用于压缩 PNG/JPEG/WebP 图像" TextWrapping="Wrap" Margin="0,0,0,12" />

                <TextBlock FontWeight="SemiBold" Text="使用的第三方包:" Margin="0,6,0,6" />

                <StackPanel Margin="8,0,0,0">
                    <TextBlock Text="Ookii.Dialogs.Wpf v5.0.1" />
                    <TextBlock TextWrapping="Wrap">
                        NuGet: 
                        <Hyperlink NavigateUri="https://www.nuget.org/packages/Ookii.Dialogs.Wpf/5.0.1" RequestNavigate="Hyperlink_RequestNavigate">https://www.nuget.org/packages/Ookii.Dialogs.Wpf/5.0.1</Hyperlink>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        源码: 
                        <Hyperlink NavigateUri="https://github.com/ookii-dialogs/ookii-dialogs" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/ookii-dialogs/ookii-dialogs</Hyperlink>
                    </TextBlock>
                    <TextBlock Text="许可证: 请参阅项目页面" Margin="0,0,0,8"/>

                    <TextBlock Text="SixLabors.ImageSharp v3.1.12" />
                    <TextBlock TextWrapping="Wrap">
                        NuGet: 
                        <Hyperlink NavigateUri="https://www.nuget.org/packages/SixLabors.ImageSharp/3.1.12" RequestNavigate="Hyperlink_RequestNavigate">https://www.nuget.org/packages/SixLabors.ImageSharp/3.1.12</Hyperlink>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        源码: 
                        <Hyperlink NavigateUri="https://github.com/SixLabors/ImageSharp" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/SixLabors/ImageSharp</Hyperlink>
                    </TextBlock>
                    <TextBlock Text="许可证: Apache-2.0" Margin="0,0,0,8"/>
                </StackPanel>

                <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12">
                    注意: 本软件使用的第三方库各自遵循其许可证。发布或分发本软件前，请确保遵守相关许可证条款。
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Width="80" Margin="0,6,0,0" Click="OkButton_Click" />
        </StackPanel>
    </Grid>
</Window>