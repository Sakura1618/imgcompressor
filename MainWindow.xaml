<!-- MainWindow.xaml -->
<Window x:Class="imgcompressor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PNG Compressor" Height="640" Width="660"
        AllowDrop="True" DragOver="Window_DragOver" Drop="Window_Drop">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Content="添加文件" Click="AddFiles_Click" HorizontalAlignment="Left" />
                <TextBlock Text="或将图片拖拽至此" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray" />
            </StackPanel>

            <Button x:Name="AboutButton" Grid.Column="1" Content="关于" Click="AboutButton_Click" HorizontalAlignment="Right" />
        </Grid>

        <ListBox x:Name="FileList" Grid.Row="1" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}"/>
                        <Button Tag="{Binding}" Content="移除" Click="RemoveFile_Click" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="输出文件夹:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="OutputPathText" Width="360" IsReadOnly="True"/>
            <Button Content="选择文件夹" Click="SelectOutputFolder_Click" Margin="10,0,0,0"/>
            <Button x:Name="OpenFolderButton" Content="打开文件夹" Click="OpenOutputFolder_Click" Margin="10,0,0,0" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="模式:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="ModeCombo" Width="150" SelectionChanged="ModeCombo_SelectionChanged" Margin="5,0,0,0">
                <ComboBoxItem Content="无损压缩"/>
                <ComboBoxItem Content="有损压缩"/>
            </ComboBox>

            <TextBlock Text="  输出格式:" VerticalAlignment="Center" Margin="15,0,5,0"/>
            <ComboBox x:Name="FormatCombo" Width="120" SelectionChanged="FormatCombo_SelectionChanged" SelectedIndex="0">
                <ComboBoxItem Content="PNG"/>
                <ComboBoxItem Content="JPEG"/>
                <ComboBoxItem Content="WebP"/>
            </ComboBox>

            <CheckBox x:Name="AdvancedToggle" Content="高级设置" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <StackPanel x:Name="TargetPanel" Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="TargetLabel" Text="目标大小(MB):" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Slider x:Name="TargetSizeSlider" Minimum="1" Maximum="50" Value="10" Width="200" IsSnapToTickEnabled="True" TickFrequency="1"/>
            <TextBlock x:Name="TargetSizeValue" Text="10" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel x:Name="AdvancedPanel" Grid.Row="5" Orientation="Vertical" Margin="0,0,0,0" Visibility="Collapsed" Opacity="0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="并发限制:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="ConcurrencySlider" Minimum="1" Maximum="8" Value="4" Width="200" IsSnapToTickEnabled="True" TickFrequency="1"/>
                <TextBlock x:Name="ConcurrencyValue" Text="4" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="最大临时磁盘(MB):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="MaxTempSlider" Minimum="50" Maximum="2048" Value="500" Width="200" IsSnapToTickEnabled="True" TickFrequency="10"/>
                <TextBlock x:Name="MaxTempValue" Text="500" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="StartCompress_Button" Content="开始压缩" Click="StartCompress_Click" HorizontalAlignment="Left"/>
            <Button x:Name="StopCompress_Button" Content="停止压缩" Click="StopCompress_Click" HorizontalAlignment="Left" Margin="10,0,0,0" IsEnabled="False"/>
        </StackPanel>

        <ProgressBar x:Name="ProgressBar" Grid.Row="7" Height="20" Margin="0,0,0,10"/>

        <TextBlock x:Name="StatusText" Grid.Row="7" Text="就绪" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>